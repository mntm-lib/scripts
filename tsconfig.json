{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowUmdGlobalAccess": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": [
    "bin",
    "config",
    "lib",
    "middlewares",
    "scripts"
  ],
  "exclude": [
    "node_modules"
  ]
}
